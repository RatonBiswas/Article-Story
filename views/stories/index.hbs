<div class="row">
    <div class="col s8"><h4>Stories</h4></div>         
    <form action="/stories/search" method="POST" class="col s4 float-right">
        <div class="">
            <div class="input-field float-right">
                <input type="text" id="search" name="search">
                 <label for="search">Search</label>
            </div>
        </div>
    </form>
    <br>
    <br>
    {{#each stories}}
    <div class="col s12 m4">
        
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
                {{!-- {{console.log(_id)}} --}}
            </div>
           
            <div class="card-content center-align">
                <h5>{{stripTags (truncate title 30)}}</h5>
                <p>{{stripTags (truncate body 30)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="image">
                    <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
             
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <P>No stories to display</P>
    {{/each}}
    
</div>